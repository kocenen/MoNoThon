<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="history"
            type="com.example.monothon.repository.db.SunHistoryItem" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_border_rectangle_gray_15_unselect">

    <ImageView
        android:id="@+id/reason_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/reason_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reason_image"
        app:layout_constraintTop_toTopOf="@+id/reason_image">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sun_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아쉽게도 선을 넘지 않았다~"
                android:textSize="14dp"
                android:textColor="@color/color_4D5358"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/sun_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{history.date}" />

        </LinearLayout>

        <TextView
            android:id="@+id/sun_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="찬미를 굳세게 만물은 뿐이다. 눈에 있을 얼마나 왔는가." />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>