<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_call_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_list_damn"
        tools:context=".view.call.CallActivity">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="수신 전화"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"/>

        <View
            android:id="@+id/cl_call_alpha"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="@id/cl_call_receive"
            app:layout_constraintEnd_toEndOf="@id/cl_call_receive"
            app:layout_constraintStart_toStartOf="@id/cl_call_receive"
            app:layout_constraintBottom_toBottomOf="@id/cl_call_receive"
            android:alpha="0"/>


        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_call_receive"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="125dp"
        android:layout_marginStart="50dp">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:tint="@color/call_receive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/cl_decline_alpha"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="@id/cl_call_decline"
            app:layout_constraintEnd_toEndOf="@id/cl_call_decline"
            app:layout_constraintStart_toStartOf="@id/cl_call_decline"
            app:layout_constraintBottom_toBottomOf="@id/cl_call_decline"
            android:alpha="0"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_call_decline"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="125dp"
        android:layout_marginEnd="50dp">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:src="@drawable/call_decline"
            android:tint="@color/route_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_after_receiving_call"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent">

            <LinearLayout
                android:id="@+id/gl_menus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_retangle"
                android:backgroundTint="@color/transparent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="200dp"
                android:layout_marginHorizontal="30dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:alpha="1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/voice"
                        android:layout_gravity="center"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:text="음성 녹음"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:alpha="1"
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mic"
                        android:layout_gravity="center"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:text="음소거"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:alpha="1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dial"
                        android:layout_gravity="center"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:text="다이얼"
                        android:layout_gravity="center"/>
                </LinearLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:alpha="1"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cam"
                            android:layout_gravity="center"
                            app:tint="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:text="영상통화"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:alpha="1"
                        android:layout_gravity="center"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bluetooth"
                            android:layout_gravity="center"
                            app:tint="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:text="블루투스"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:alpha="1"
                        android:layout_gravity="center"
                        android:layout_width="35dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add"
                            android:layout_gravity="center"
                            app:tint="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:text="추가"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_call_end"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/route_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="70dp"
                android:gravity="center">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:tint="@color/white"
                    android:src="@drawable/call_decline"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_call_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="할아버지"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:layout_marginTop="125dp"/>

        <TextView
            android:id="@+id/tv_call_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="010-1234-1234"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/tv_call_person"
            app:layout_constraintStart_toStartOf="@id/tv_call_person"
            app:layout_constraintTop_toBottomOf="@id/tv_call_person"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>