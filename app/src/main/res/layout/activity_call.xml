<?xml version="1.0" encoding="utf-8"?>

<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_call_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_list_damn"
        tools:context=".CallActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="수신 전화"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/tv_call_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="누구게"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:layout_marginTop="125dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="010-0000-0000"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/tv_call_person"
            app:layout_constraintStart_toStartOf="@id/tv_call_person"
            app:layout_constraintTop_toBottomOf="@id/tv_call_person"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_call_receive"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="125dp"
        android:layout_marginStart="50dp">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/call"
            android:tint="@color/call_receive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_call_decline"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="125dp"
        android:layout_marginEnd="50dp">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/call_decline"
            android:tint="@color/route_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>