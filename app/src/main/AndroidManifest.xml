<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.monothon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity
            android:name=".view.MakeCallActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.history.detail.HistoryDetailUncrossedLineActivity"
            android:exported="false" />
        <activity
            android:name=".view.history.detail.HistoryDetailCrossedLineActivity"
            android:exported="false" />
        <activity
            android:name=".view.sms.MakeMarryActivity"
            android:exported="false" />
        <activity
            android:name=".view.sms.MakeWoohanSMSActivity"
            android:exported="true"
            android:theme="@style/Theme.MonoThon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.call.CallActivity"
            android:exported="true" />
        <activity
            android:name=".view.intro.result.SunSafeActivity"
            android:exported="true" />
        <activity
            android:name=".view.intro.result.SunBreakActivity"
            android:exported="true" />
        <activity
            android:name=".view.intro.picture.FacePictureActivity"
            android:exported="true" />
        <activity
            android:name=".view.history.list.HistoryListActivity"
            android:exported="true" />
        <activity
            android:name=".view.IntroActivity"
            android:exported="true"/>
    </application>

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

</manifest>